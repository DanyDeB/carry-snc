---
layout: 'base-blog.njk'
---
       
<div class="article">
  <article class="article-snippet">
    <div class="container container--narrow flow">
      <h1 class="article-title">
        {{ title }}
      </h1>
      <figure class="main-article__figure">
        <img src="{{ image }}" alt="{{ imageAlt }}">
      
    
    </div>
  </article>
  <div class="article-content">
    {{ content | safe }}
  </div>
</div>