<li>
    <article class="article-snippet">
        <div class="article-snippet__data">
            <div>
                <h3 class="article-snippet__title"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
                <p class="article-snippet__meta"> by <span>{{ post.data.author }}</span> on <span>{{ post.date | postDate }}</span></p>
                <p class="article-snippet__description">{{ post.data.description }}</p>
                <p class="article-snippet__description">{{ post.data.body }}</p>
            </div>
            <a href="{{ post.url }}" class="btn-home btn--primary-home article-snippet__link">Lire la suite</a>
        </div>
        <div class="article-snippet__image" >
            <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}" class="snippet__image">
        </div>
        {# <div class="article-snippet__content">
            <p>{{ post.data.content }}</p>
        </div> #}
    </article>
</li>